@model ImhoWebstore.Models.Product

@{
    ViewBag.Title = "Details";
}
<div class="product-details">
    <h2 class="h2 text-center">@Model.Name</h2>
    <div class="row">
        <div class="col-md-8 description">
            @Model.Description
        </div>
        <div class="cold-md-4">
            <img class="img-thumbnail" src="~/Images/Products/@Model.ImageUrl" />
        </div>
    </div>
</div>