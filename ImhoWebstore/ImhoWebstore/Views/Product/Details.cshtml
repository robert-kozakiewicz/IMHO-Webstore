@model ImhoWebstore.Models.Product

@{
    ViewBag.Title = "Details";
}
<div class="product-details">
    <h2 class="h2 text-center">@Model.Name</h2>
    <div class="row">
        <div class="col-md-8 description">
            @Model.Description
            <br />
            <br />
            Wykup już teraz za 6.99PLN <div class="buybutton">KUP</div>
        </div>
        <div class="col-md-4">
            <img class="img-thumbnail" src="~/Images/Products/@Model.ImageUrl" />
            <a class="btn btn-success buy-button" onclick="alert('Jeszcze nie zaimplementowaliśmy tego ficzera!');">Biere!</a>
        </div>
    </div>
</div>